# Example environment configuration for backend
# Copy to .env and fill in real values. Do NOT commit the real .env.

# ── App ───────────────────────────────────────────────────────────
APP_NAME=Image-Gen Backend
ENV=development
DEBUG=true
HOST=0.0.0.0
PORT=8000

# CORS (comma-separated, no spaces)
CORS_ALLOW_ORIGINS=http://localhost:5173

# ── Gemini (Google Generative AI) ─────────────────────────────────
# Store your actual key in .env locally or as a CI/CD secret
GEMINI_API_KEY={{GEMINI_API_KEY}}

# ── Object storage (S3-compatible) ────────────────────────────────
# provider can be: s3|minio|r2|gcs (choose what you wire up)
OBJECT_STORAGE_PROVIDER=minio
OBJECT_STORAGE_ENDPOINT=http://localhost:9000
OBJECT_STORAGE_BUCKET=image-gen
OBJECT_STORAGE_ACCESS_KEY={{MINIO_ACCESS_KEY}}
OBJECT_STORAGE_SECRET_KEY={{MINIO_SECRET_KEY}}
USE_HTTPS=false

# ── Logging ───────────────────────────────────────────────────────
LOG_LEVEL=INFO
STRUCTURED_LOGGING=true

